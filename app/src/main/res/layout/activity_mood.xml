<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mood_background"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:id="@+id/titleMood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="How are you feeling today?"
        android:textColor="#333333"
        android:textSize="22sp"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:hint="Select your mood"
        app:boxBackgroundMode="filled"
        app:endIconMode="dropdown_menu">

        <AutoCompleteTextView
            android:id="@+id/moodDropdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:inputType="none"
            android:padding="12dp"
            android:textColor="#000000"
            android:textColorHint="#666666" />
    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/saveMoodBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:backgroundTint="#4CAF50"
        android:text="Save Mood"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/quoteLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Motivational Quote:"
        android:textColor="#222222"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/quoteText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="#ffffff"
        android:backgroundTint="#FFFFFF"
        android:elevation="2dp"
        android:padding="12dp"
        android:text="Your quote will appear here"
        android:textColor="#444444"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/lastMoodTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="#ffffff"
        android:backgroundTint="#FFFFFF"
        android:elevation="2dp"
        android:padding="12dp"
        android:text="Last mood:\n\nLast Quote:"
        android:textColor="#444444"
        android:textSize="16sp" />


</LinearLayout>
